{
  "name": "pocketcaster-app",
  "version": "0.0.1",
  "description": "PocketCaster App",
  "main": "main.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "build --dir",
    "dist": "build"
  },
  "build": {
    "appId": "PocketCaster",
    "linux": {
      "category": "Audio",
      "maintainer": "Karl Lensson",
      "vendor": "",
      "executableName": "pocketcaster",
      "synopsis": "An Electron-powered app for PocketCasts",
      "description": "Tabs are so last year.",
      "icon": "assets/icons/png/256x256.png",
      "desktop": {
        "Name": "PocketCaster",
        "Exec": "pocketcaster",
        "Icon": "256x256.png",
        "Type": "Application",
        "Categories": "Audio"
      },
      "target": [
        "pacman"
      ]
    }
  },
  "repository": "https://github.com/jomurgel/PocketCasterApp",
  "keywords": [
    "Electron",
    "pocketcast",
    "podcast",
    "media"
  ],
  "author": {
    "email": "hello@jomurgel.com",
    "name": "jomurgel"
  },
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^1.7.8",
    "electron-builder": "^20.26.1"
  }
}
